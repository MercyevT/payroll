                    ,
                    
                }//edata
                ,
                created(){
                     
                }//ecreated
                ,
                methods:{
                  add_infomaster(){
                   
                    var url = '/infomaster/add';
                    var param= this.infomaster;
                    $.post(url,param)
                    .done(res =>{
                          if(res.error == -1){
                               window.location = '/infomaster/index';
                          }
                          else{
                             alert(res.exception);
                          }
                    });
                    
                  }//emethod

                }//emethod
                ,
                 computed:{

                 }//ecomputed
            };
            app = new Vue(component);


    </script>

}
